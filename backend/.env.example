# ================================
# CONFIGURACIÓN DE BASE DE DATOS
# ================================

# MongoDB Atlas - String de conexión
MONGODB_URI=mongodb+srv://<usuario>:<contraseña>@<cluster>.mongodb.net/<base_datos>?retryWrites=true&w=majority

# ================================
# CONFIGURACIÓN DEL SERVIDOR
# ================================

# Puerto del servidor
PORT=3000

# Host del servidor
HOST=0.0.0.0

# Entorno de ejecución
NODE_ENV=development

# URL del frontend para CORS
FRONTEND_URL=http://localhost:5173

# ================================
# CONFIGURACIÓN JWT
# ================================

# Clave secreta para JWT (generar con crypto)
JWT_SECRET=<generar_clave_secreta>

# Tiempos de expiración JWT
JWT_EXPIRES_IN=24h
JWT_ADMIN_EXPIRES_IN=8h
JWT_VISITOR_EXPIRES_IN=15m
